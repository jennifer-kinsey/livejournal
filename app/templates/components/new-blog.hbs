{{#if addNewBlog}}
  <h2>New Melodramatic Blog Post</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="date">Date:</label>
        {{input value=date id="date"}}
      </div>
      <div class="form-group">
        <label for="time">Time:</label>
        {{input value=time id="time"}}
      </div>
      <div class="form-group">
        <label for="title">Title:</label>
        {{input value=title id="title"}}
      </div>
      <div class="form-group">
        <label for="body">Post:</label>
        {{textarea input value=body id="body"}}
      </div>
      <div class="form-group">
        <label for="mood">Current Mood:</label>
        {{input value=mood id="mood"}}
      </div>
      <div class="form-group">
        <label for="music">Current Music:</label>
        {{input value=music id="music"}}
      </div>

      <a href="newPage.htm" {{action 'saveBlog1'}}>(Save)</a>
    </form>
  </div>
{{else}}
  <a href="newPage.htm" {{action 'blogFormShow'}}>New Post</a>
{{/if}}
