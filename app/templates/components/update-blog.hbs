{{#if updateBlogForm}}
  <h2>Change Melodramatic Blog Post</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="date">Date:</label>
        {{input value=date id="date" placeholder=blog.date}}
      </div>
      <div class="form-group">
        <label for="time">Time:</label>
        {{input value=time id="time" placeholder=blog.time}}
      </div>
      <div class="form-group">
        <label for="title">Title:</label>
        {{input value=title id="title" placeholder=blog.title}}
      </div>
      <div class="form-group">
        <label for="body">Post:</label>
        {{input value=body id="body" placeholder=blog.body}}
      </div>
      <div class="form-group">
        <label for="mood">Current Mood:</label>
        {{input value=mood id="mood" placeholder=blog.mood}}
      </div>
      <div class="form-group">
        <label for="music">Current Music:</label>
        {{input value=music id="music" placeholder=blog.music}}
      </div>

      <a class="underline" href="newPage.htm" {{action 'update' blog}}>Save</a>
    </form>
  </div>
{{else}}
  <a class="underline" href="newPage.htm" {{action 'updateBlogForm'}}>(Update Post)</a>
{{/if}}
